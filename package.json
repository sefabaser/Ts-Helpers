{
  "name": "helpers-lib",
  "version": "1.13.10",
  "description": "Typescript Helpers Library",
  "main": "src/index.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sefabaser/Ts-Helpers.git"
  },
  "publishConfig": {
    "main": "dist/index.js",
    "types": "dist/index.d.ts"
  },
  "author": "sefabaser",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/sefabaser/Ts-Helpers/issues"
  },
  "homepage": "https://github.com/sefabaser/Ts-Helpers#readme",
  "scripts": {
    "clean-install": "cls && rm -rf node_modules && rm -rf package-lock.json && npm run i",
    "i": "npm cache clean --force && npm install",
    "pretest": "clear",
    "test": "vitest run",
    "test-quick": "vitest run --mode=quick",
    "start": "npm run build && node dist",
    "build": "tsc",
    "lint": "biome check . --write --max-diagnostics=1",
    "deploy": "vitest run && npm run build && npm publish",
    "prepack": "cp package.json package.json.bak && ts-node scripts/prepare-package-json.ts",
    "postpack": "mv package.json.bak package.json"
  },
  "dependencies": {
    "reflect-metadata": "0.2.2",
    "joi": "17.11.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/node": "20.12.11",
    "typescript": "5.3.3",
    "vitest": "3.2.4"
  }
}
