{
  "name": "helpers-lib",
  "version": "1.13.10",
  "description": "Typescript Helpers Library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sefabaser/Ts-Helpers.git"
  },
  "author": "sefabaser",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/sefabaser/Ts-Helpers/issues"
  },
  "prettier": {
    "printWidth": 130,
    "tabWidth": 2,
    "semicolons": true,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "homepage": "https://github.com/sefabaser/Ts-Helpers#readme",
  "scripts": {
    "clean-install": "cls && rm -rf node_modules && rm -rf package-lock.json && npm install",
    "pretest": "clear",
    "test": "vitest",
    "start": "npm run build && node dist",
    "build": "tsc",
    "lint": "biome check . --write --max-diagnostics=1",
    "deploy": "vitest run && npm run build && npm publish"
  },
  "dependencies": {
    "reflect-metadata": "0.2.2",
    "joi": "17.11.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "typescript": "5.3.3",
    "vitest": "1.6.0"
  }
}
